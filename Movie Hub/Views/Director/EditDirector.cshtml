@model MovieHub.ViewModels.AddDirectorViewModel

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="EditDirector" method="post">

            @*Actor first name*@
            <div class="mb-3">
                <label asp-for="@Model.FirstName" class="form-label-add-edit">First Name</label>
                <input asp-for="@Model.FirstName" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
            </div>

             @*Actor last name*@
            <div class="mb-3">
                <label asp-for="@Model.LastName" class="form-label-add-edit">Last Name</label>
                <input asp-for="@Model.LastName" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.LastName" class="text-danger"></span>
            </div>

           @* Actor Description*@
            <div class="mb-3">
                <label asp-for="@Model.Description" class="form-label-add-edit">Description</label>
                <textarea asp-for="@Model.Description" class="form-control" aria-required="true" rows="5"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            @*Actor Born Date*@
             <div class="mb-3">
                <label asp-for="@Model.BornDate" class="form-label-add-edit">Release Date</label>
                <input asp-for="@Model.BornDate" class="form-control" aria-required="true" value="@DateTime.Now.ToString("yyyy-MM-dd H:mm")" />
                <span asp-validation-for="@Model.BornDate" class="text-danger"></span>
            </div>

            @*Actor Death Date*@
             <div class="mb-3">
                <label asp-for="@Model.DeathDate" class="form-label-add-edit">Release Date</label>
                <input asp-for="@Model.DeathDate" class="form-control" aria-required="true" value="@DateTime.Now.ToString("yyyy-MM-dd H:mm")" />
                <span asp-validation-for="@Model.DeathDate" class="text-danger"></span>
            </div>

            @*First Reward*@
            <div class="mb-3">
                <label asp-for="@Model.FirstReward.Id" class="form-label-add-edit">Award</label>
                <select asp-for="@Model.FirstReward.Id" class="form-control" aria-required="true">
                    @foreach (var type in Model.Rewards)
                    {
                        <option value="@type.Id">@type.Title</option>
                    }
                </select>
                <span asp-validation-for="@Model.FirstReward.Id" class="text-danger"></span>
            </div>

            @*Second Reward*@
            <div class="mb-3">
                <label asp-for="@Model.SecondReward.Id" class="form-label-add-edit">Award</label>
                <select asp-for="@Model.SecondReward.Id" class="form-control" aria-required="true">
                    @foreach (var type in Model.Rewards)
                    {
                        <option value="@type.Id">@type.Title</option>
                    }
                </select>
                <span asp-validation-for="@Model.SecondReward.Id" class="text-danger"></span>
            </div>

            @*Third Reward*@
            <div class="mb-3">
                <label asp-for="@Model.ThirdReward.Id" class="form-label-add-edit">Award</label>
                <select asp-for="@Model.ThirdReward.Id" class="form-control" aria-required="true">
                    @foreach (var type in Model.Rewards)
                    {
                        <option value="@type.Id">@type.Title</option>
                    }
                </select>
                <span asp-validation-for="@Model.ThirdReward.Id" class="text-danger"></span>
            </div>

             <div class="mb-3">
                <label asp-for="@Model.BornCityName" class="form-label-add-edit">Born city name</label>
                <input asp-for="@Model.BornCityName" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.BornCityName" class="text-danger"></span>
            </div>

            

            <div class="mb-3">
                <label asp-for="@Model.ImgURL" class="form-label-add-edit">ImgUrl</label>
                <input asp-for="@Model.ImgURL" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.ImgURL" class="text-danger"></span>
            </div>

            
            <div class="mb-3">
                <input class="btn btn-warning mb-2 w-100 p-3 fw-bold" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}